{{#each events as |event|}}
  <section data-id="{{event.id}}">
    <h4>Event Name:</h4>
    <h3>
      {{event.name}}
    </h3>
    <h6>Description:</h6>
    <p>
      {{#if event.description}}
        {{event.description}}
      {{else}}
        No description provided.
      {{/if}}
    </p>
    <h6>Date:</h6>
    <p>
      {{event.date}}
    </p>
    <h6>Time:</h6>
    <p>
      {{event.time}}
    </p>
    <h6>Location:</h6>
    <p>
      {{event.location.name}}
    </p>
    <p>
      <small>{{event.location.address}}</small>
    </p>
    <h6>Organizer:</h6>
    <p>
      {{event.organizer}}
    </p>
    <p>
      {{#if event.editable}}
        <div class="edit-event-buttons">
          <button class="btn btn-danger remove-event" data-id="{{event.id}}">Remove Event</button>
          <button class="btn btn-info edit-event-button" data-id="{{event.id}}">Edit Event</button>
        </div>
        <form class="edit-event form-inline" data-id="{{event.id}}" id="update-event-{{event.id}}" style="display:none">
            <legend>Enter Updated Event Info:</legend>
            <input type="text" name="event[name]" placeholder="Name" required>
            <input type="text" name="event[description]" placeholder="Description" required>
            <input type="date" name="event[date]" placeholder="Date" required>
            <input type="time" name="event[time]" placeholder="Time" required>
            <select class="event-location" name="event[location_id]" required>
              {{#each ../events/locations as |location|}}
              <option value="{{location.id}}">{{location.name}}</option>
              {{/each}}
            </select>
            <!-- <input type="location" name="event[location]" placeholder="Location"> -->
            <input type="organizer" name="event[organizer]" placeholder="Organizer" required>
            <input type="submit" value="Update Event!" class="btn btn-outline-info">
        </form>
      {{/if}}
    </p>
    <!-- <button class="btn btn-danger" data-id="{{book.id}}">Remove Book</button>
    {{> partial}} -->
  </section>

{{/each}}
